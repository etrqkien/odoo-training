<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'done'"
                  decoration-info=" state == 'draft'"
                  decoration-warning="state == 'in_consultation'"
                  decoration-danger="state == 'cancel'"
                  sample="1"
                  multi_edit="1"
            >
                <field name="patient_id"/>
                <field name="appointment_time"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="booking_date" optional="show"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state"
                       decoration-success="state == 'done'"
                       decoration-info=" state == 'draft'"
                       decoration-warning="state == 'in_consultation'"
                       decoration-danger="state == 'cancel'"
                       widget="badge"
                />
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_in_consultation" string="In consultation" type="object"
                            invisible="state != 'draft'"/>
                    <button name="action_in_done" string="Mark as done" type="object"
                            invisible="state != 'in_consultation'"/>
                    <button name="action_in_cancel" string="Cancel" type="object"
                            invisible="state in ['done', 'cancel']"/>
                    <field name="state" widget="statusbar" nolabel="1"
                            statusbar_invisible="cancel"/>
                </header>
                <sheet>
                    <div>
                        <h2>
                            <field name="priority" widget="priority"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="gender"/>
                            <field name="ref"/>
                            <field name="doctor_id" widget="many2one_avatar"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                            <field name="booking_date"/>
                            <field name="meeting_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prescription" name="prescription">
                            <field name="prescription"
                            options="{'collaborative': true, 'resizeable': true}"/>
                        </page>
                        <page string="Pharmacy" name="pharmacy">
                            <field name="pharmacy_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="price_unit"/>
                                    <field name="qty"/>
                                </tree>
                                <form>
                                    <field name="product_id"/>
                                    <field name="price_unit"/>
                                    <field name="qty"/>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first appointment!
            </p>
        </field>
    </record>

    <menuitem id="appointment_menu"
              name="Appointment"
              action="action_hospital_appointment"
              parent="appointment_master_menu"
              sequence="0"
    />
</odoo>

