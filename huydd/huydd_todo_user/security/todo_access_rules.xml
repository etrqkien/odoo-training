<?xml version="1.0" encoding="utf8" ?>
<odoo>
    <data noupdate="1">
        <record id="huydd_todo_app.todo_task_user_rule" model="ir.rule">
            <field name="name">Todo Task For Owner or Follower</field>
            <field name="model_id" ref="model_todo_task"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">
                ['|', ('user_id', 'in', [False, user.id]), ('message_follower_ids', 'in', [user.partner_id.id])]
            </field>

        </record>
    </data>
</odoo>