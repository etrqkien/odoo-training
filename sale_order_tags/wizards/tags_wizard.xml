<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="tags_wizard" model="ir.ui.view">
            <field name="name">Tags view</field>
            <field name="model">tags.wizard</field>
            <field name="arch" type="xml">
                <form string="Select Order">
                    <sheet>
                       <button name="added" type="object" string="Save" class="btn-primary"/>
                        <button special="cancel" string="Cancel"/>
                        <group>
                            <field name="sale_order_id" widget="many2many_checkboxes" domain="[('state','=','sale')]"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="button_2_wizard_action" model="ir.actions.act_window">
            <field name="name">Button to Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tags.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="tags_wizard"/>
            <field name="target">new</field>
        </record>
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">Add Order</field>
            <field name="model">sale.order.tags</field>
            <field name="inherit_id" ref="sale_order_tags.sale_order_tags_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/div/button[@name='check_order_tags']" position="after">
                    <button name="%(sale_order_tags.button_2_wizard_action)d"
                            string="Add Order" class="oe_highlight" type="action" icon="fa-tags"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>