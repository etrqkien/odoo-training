        <record id="sale_order_view_search_inherit_sale" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                    <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                    <separator/>
                        <field name="tag_ids" filter_domain="[('expected_date','ilike', self)]"/>
                        <filter string="Product" name="tag_ids" domain="[('tag_ids','=','Product')]"/>
                        <filter string="Software" name="tag_ids" domain="[('tag_ids','=','Software')]"/>
                        <filter string="Services" name="tag_ids" domain="[('tag_ids','=','Services')]"/>
                        <filter string="Information" name="tag_ids" domain="[('tag_ids','=','Information')]"/>
                        <filter string="Design" name="tag_ids" domain="[('tag_ids','=','Design')]"/>
                        <filter string="Training" name="tag_ids" domain="[('tag_ids','=','Training')]"/>
                        <filter string="Consulting" name="tag_ids" domain="[('tag_ids','=','Consulting')]"/>
                        <filter string="Other" name="tag_ids" domain="[('tag_ids','=','Other')]"/>
                    <separator/>
                </xpath>
            </field>
        </record>
