<?xml version="1.0"?>
<odoo>
    <record id="sale_order_tag_view_form" model="ir.ui.view">
        <field name="name">sale.order.tag.form</field>
        <field name="model">sale.order.tag</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Order Tags">
                <header>
                        <button name="add_order" type="object" string="Select Orders"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>

                    <div class="oe_button_box" name="button_box">
                        <button name="action_tag_ids" type="object" class="oe_stat_button" string="Đơn hàng" icon="fa-tag">
                            <div class="o_stat_info">
                                <field name="count_ord"/>
                            </div>
                        </button>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_order_tag_view_tree" model="ir.ui.view">
        <field name="name">sale.order.tag.tree</field>
        <field name="model">sale.order.tag</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Order Tags">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="sale_order_tag_action" model="ir.actions.act_window">
        <field name="name">Order Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sale_order_tag_menu"
              action="sale_order_tag_action"
              parent="sale.menu_sales_config"
              sequence="4" name="Order Tags"/>
</odoo>