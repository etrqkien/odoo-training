<odoo>
    <data>
        <record id="sale_order_inher_form_view" model="ir.ui.view">
            <field name="name">sale_order_inher_form_view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <page name="customer_signature" position="after">
                   <page name="order_tags" string="Tags">
                       <group>
                           <field name="x_tag_ids" widget="many2many_checkboxes" groups="sale_management.group_sale_order_template"/>
                       </group>
                   </page>
                </page>
            </field>
        </record>

        <record id="search_sales_order_view" model="ir.ui.view">
            <field name="name">search_sales_order_view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='analytic_account_id']" position="after">
                    <field name="x_tag_ids"/>
                    <filter string="Tag_product" domain="[('x_tag_ids.name', '=', 'product')]" name="filter_tag"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>