<odoo>
    <data>
        <record id="sale_order_tag_tree_view" model="ir.ui.view">
            <field name="name">sale_order_tag_tree_view</field>
            <field name="model">sale.order.tag</field>
            <field name="arch" type="xml">
                <tree string="Order Tags">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="sale_order_tag_form_view_tag" model="ir.ui.view">
            <field name="name">sale_order_tag_form_view_tag</field>
            <field name="model">sale.order.tag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="button_order" class="oe_stat_button" type="object" icon="fa-star" >
                                <div class="o_stat_info">
                                    <field name="order_count"/>
                                </div>
                            </button>
                        </div>
                        <group>
                            <field name="name"/>
                        </group>
                        <footer>
                            <button string="select order" class="oe_highlight"
                                    name="select_order"  type="object"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sale_order_tag" model="ir.actions.act_window">
            <field name="name">Order tags</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.tag</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_sale_order_tag"
                  action="action_sale_order_tag"
                  parent="sale.menu_sales_config"
                  sequence="1"
                  name="Order Tags"
                  groups="sale_management.group_sale_order_template"/>
    </data>
</odoo>