<odoo>
    <record id="wizard_order_form" model="ir.ui.view">
        <field name="name">wizard_order_form</field>
        <field name="model">wizard.order</field>
        <field name="arch" type="xml">
            <form string="Order">
                <sheet>
                    <group>
                        <field name="x_list_order" widget="many2many_checkboxes"/>
                    </group>
                    <footer>
                        <button string="Save" name="tag_update" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_wizard_order" model="ir.actions.act_window">
        <field name="name">Order</field>
        <field name="res_model">wizard.order</field>
        <field name="type">ir.actions.act_window</field>
<!--        <field name="binding_model_id" ref="model_sale_order_tag"/>-->
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>