<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_sale_order" model="report.paperformat">
            <field name="name">A5 SO</field>
            <field name="default" eval="True"/>
            <field name="format">A5</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">2</field>
            <field name="dpi">80</field>
        </record>

        <report
            id="report_sale_order"
            string="Report Sale Order"
            model="sale.order"
            report_type="qweb-pdf"
            name="sale_training.report_sale_order"
            file="sale_training.report_sale_order"
            paperformat="paperformat_sale_order"/>
    </data>
</odoo>

