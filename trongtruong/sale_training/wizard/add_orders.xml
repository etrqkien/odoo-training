<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="tag_add_order_wizard">
            <field name="name">Add Order</field>
            <field name="model">add.orders</field>
            <field name="arch" type="xml">
                <form string="Add Order">
                    <group>
                        <field name="order_ids" widget="many2many_checkboxes"
                               options="{'no_create': True, 'no_create_edit':True}"/>
                    </group>
                    <footer>
                        <button string="OK"
                            name="add_orders" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_tag_add_order_wizard" model="ir.actions.act_window">
            <field name="name">Add Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">add.orders</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">Add Order</field>
            <field name="model">sale.order.tag</field>
            <field name="inherit_id" ref="sale_training.order_tag_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header/button[@name='clear_tag']" position="before">
                    <button name="%(sale_training.action_tag_add_order_wizard)d"
                            string="Add Order" class="oe_highlight" type="action"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>