<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="play_match_tree_view" model="ir.ui.view">
            <field name="name">play.match.tree.view</field>
            <field name="model">play.match</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="player1_score"/>
                    <field name="player2_score"/>
                    <field name="player3_score"/>
                    <field name="player4_score"/>
                </tree>
            </field>
        </record>
        <record id="play_match_form_view" model="ir.ui.view">
            <field name="name">play.match.form.view</field>
            <field name="model">play.match</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="player1_score"/>
                            <field name="player2_score"/>
                        </group>
                        <group>
                            <field name="player3_score"/>
                            <field name="player4_score"/>
                        </group>
                            <field name="play_room_id"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="play_room_tree_view" model="ir.ui.view">
            <field name="name">play.room.tree.view</field>
            <field name="model">play.room</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="player1_name"/>
                    <field name="player1_score"/>
                    <field name="player2_name"/>
                    <field name="player2_score"/>
                    <field name="player3_name"/>
                    <field name="player3_score"/>
                    <field name="player4_name"/>
                    <field name="player4_score"/>
                    <field name="play_match"/>
                </tree>
            </field>
        </record>
        <record id="play_room_form_view" model="ir.ui.view">
            <field name="name">play.room.form.view</field>
            <field name="model">play.room</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group colspan="8">
                            <group>
                                <field name="player1_name"/>
                                <field name="player1_score"/>
                            </group>
                            <group>
                                <field name="player2_name"/>
                                <field name="player2_score"/>
                            </group>
                            <group>
                                <field name="player3_name"/>
                                <field name="player3_score"/>
                            </group>
                            <group>
                                <field name="player4_name"/>
                                <field name="player4_score"/>
                            </group>
                            <div>
                                <button name="ket_qua" type="object" string="Nhập kết quả" class="oe_highlight"/>
                            </div>
                            <div width="746px">
                                <field name="play_match"/>
                            </div>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="play_match_button" model="ir.actions.act_window">
            <field name="name">Nhập điểm ván đấu</field>
            <field name="res_model">play.wizard</field>
    <!--        model_ + tên model-->
            <field name="binding_model_id" ref="model_play_wizard"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <record id="play_match_form_wizard" model="ir.ui.view">
            <field name="name">play.match.form.wizard</field>
            <field name="model">play.wizard</field>
            <field name="arch" type="xml">
                <form string="Batch Update">
                    <sheet>
                        <div width="200px">
                            <label for="name" class="oe_edit_only" string="Player1_name" invisible="1" />
                            <h2><field name="player1_name" /></h2>
                        </div>
                            <field name="player1_score" />
                    </sheet>
                    <sheet>
                        <div>
                            <label for="name" class="oe_edit_only" string="Player2_name" invisible="1"/>
                            <h2><field name="player2_name" /></h2>
                        </div>
                            <field name="player2_score" />
                    </sheet>
                    <sheet>
                        <div>
                            <label for="name" class="oe_edit_only" string="Player3_name" invisible="1"/>
                            <h2><field name="player3_name" /></h2>
                        </div>
                            <field name="player3_score" />
                    </sheet>
                    <sheet>
                        <div>
                            <label for="name" class="oe_edit_only" string="Player4_name" invisible="1"/>
                            <h2><field name="player4_name" /></h2>
                        </div>
                            <field name="player4_score"  />
                    </sheet>
                        <field name="play_room_id" invisible="1"/>
                        <footer>
                            <button string="Confirm" name="multi_update" type="object" default_focus="1" class="btn-primary"/>
                            <button string="Cancel" class="btn-default" special="cancel"/>
                        </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>