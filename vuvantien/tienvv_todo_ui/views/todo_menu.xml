<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <!--Các hành động của cửa sổ được lưu trữ trong mô hình ir.ilities.act_window và có thể được xác định trong các tệp XML bằng cách sử dụng-->
<!--phím tắt <act_window> được sử dụng trong mã trước đó.-->
<!--Hành động đầu tiên sẽ mở mô hình task stage và bao gồm các thuộc tính phù hợp nhất cho cửa sổ-->
<!--hành động-->
        <!--res_model là định danh của mô hình đích-->
        <!--view_mode là kiểu xem có sẵn và thứ tự của chúng-->
        <!--tên miền là một biểu thức miền buộc một bộ lọc cho các bản ghi sẽ được duyệt trong phần mở lượt xem-->
        <!--limit : số lượng hồ sơ hiển thị tối đa mỗi trang-->

        <act_window id="action_todo_stage"
                    name="To-Do Task Stages"
                    res_model="todo.task.stage"
                    view_mode="tree,form"
                    target="current"
                    context="{'default_state': 'open'}"
                    domain="[]"
                    limit="80"
        />
        <act_window id="tienvv_todo_user.action_todo_task"
                    name=" To-Do Tasks"
                    res_model="todo.task"
                    view_mode="tree,form,calendar,graph,pivot"
                    target="current"
                    context="{'search_default_filter_my_tasks': True}"
        />
        <!-- Add option to the "More" button -->
        <!--src chỉ ra mô hình nào mà hành động này được cung cấp-->
        <!--multi = false : chỉ có sẵn trong chế dộ xem form và áp dụng cho 1 bản ghi tại 1 thời điểm -->
        <act_window id="action_todo_task_stage"
                    name="To-Do Task Stages"
                    res_model="todo.task.stage"
                    src_model="todo.task"
                    multi="False"
        />

        <!-- Menu items -->
        <!--menu cấp cao nhất-->
        <menuitem id="tienvv_todo_user.menu_todo_task"
                  name="Todo_UI"/>

        <!--menu ứng dụng-->
        <!--parent : sử dụng cấp cao nhất-->
        <!--dùng hành động: action : tienvv_todo_user.action_todo_task-->
        <!--<menuitem>, cung cấp một cách viết tắt để xác định bản ghi cần tải-->
        <menuitem id="menu_todo_task_view"
                  name="Tasks"
                  parent="tienvv_todo_user.menu_todo_task"
                  sequence="10"
                  action="tienvv_todo_user.action_todo_task"/>

        <menuitem id="menu_todo_config"
                  name="Configuration"
                  parent="tienvv_todo_user.menu_todo_task"
                  sequence="100"
                  groups="base.group_system"/>

        <menuitem id="menu_todo_task_stage"
                  name="Stages"
                  parent="menu_todo_config"
                  sequence="10"
                  action="action_todo_stage"/>

    </data>
</odoo>
